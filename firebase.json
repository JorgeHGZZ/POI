{
  "hosting": {
    "public": "ClassHub",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=3600"
          }
        ]
      }
    ]
  }
}